---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact In 'n Out Auto Customization - Free Quote Highland Park NJ"
  description="Get a free quote for vehicle wraps, PPF, or window tinting in Highland Park, NJ. Same-day estimates. Call XXX-XXX-XXXX or request quote online.">
  
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-black to-gray-900 text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-5xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl">Get Your Free Quote Today - Same-Day Estimates Available</p>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          
          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold mb-6">Get Your Free Quote</h2>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-2">First Name *</label>
                  <input type="text" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">Last Name *</label>
                  <input type="text" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-2">Phone *</label>
                  <input type="tel" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">Email *</label>
                  <input type="email" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                </div>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Vehicle Year, Make, Model *</label>
                <input type="text" required placeholder="e.g., 2020 Tesla Model 3" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Service Interested In *</label>
                <select required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                  <option value="">Select a service...</option>
                  <option value="vehicle-wrap">Vehicle Wrap</option>
                  <option value="ppf">Paint Protection Film (PPF)</option>
                  <option value="window-tint">Window Tinting</option>
                  <option value="ceramic-coating">Ceramic Coating</option>
                  <option value="custom-work">Custom Work</option>
                  <option value="multiple">Multiple Services</option>
                </select>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">Project Details</label>
                <textarea rows="4" placeholder="Tell us about your project, timeline, budget, etc." class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
              </div>

              <div>
                <label class="block text-sm font-medium mb-2">How did you hear about us?</label>
                <select class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                  <option value="">Select...</option>
                  <option value="google">Google Search</option>
                  <option value="referral">Friend/Family Referral</option>
                  <option value="social-media">Social Media</option>
                  <option value="drive-by">Saw Your Work</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-8 py-3 rounded-lg font-semibold transition w-full">
                Send My Quote Request
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            
            <!-- Contact Details -->
            <div class="bg-gray-50 p-8 rounded-lg">
              <h3 class="text-2xl font-bold mb-6">Get In Touch</h3>
              <div class="space-y-4">
                <div class="flex items-start">
                  <svg class="w-6 h-6 text-red-600 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <div>
                    <h4 class="font-semibold">Call or Text</h4>
                    <a href="tel:+1XXXXXXXXXX" class="text-2xl font-bold text-red-600 hover:text-red-700">XXX-XXX-XXXX</a>
                    <p class="text-sm text-gray-600">Available 7 days a week</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-6 h-6 text-red-600 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <div>
                    <h4 class="font-semibold">Email</h4>
                    <a href="mailto:info@innoutauto.com" class="text-red-600 hover:text-red-700">info@innoutauto.com</a>
                    <p class="text-sm text-gray-600">We respond within 2 hours</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <svg class="w-6 h-6 text-red-600 mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <div>
                    <h4 class="font-semibold">Location</h4>
                    <p>Highland Park, NJ 08904</p>
                    <p class="text-sm text-gray-600">Mobile service available</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Hours -->
            <div class="bg-white border p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-4">Business Hours</h3>
              <div class="space-y-2">
                <div class="flex justify-between">
                  <span>Monday - Friday</span>
                  <span class="font-semibold">8:00 AM - 6:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span>Saturday</span>
                  <span class="font-semibold">9:00 AM - 4:00 PM</span>
                </div>
                <div class="flex justify-between">
                  <span>Sunday</span>
                  <span class="font-semibold">By Appointment</span>
                </div>
              </div>
              <p class="text-sm text-gray-600 mt-4">Emergency services available 24/7</p>
            </div>

            <!-- Service Areas -->
            <div class="bg-red-50 p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-4">Service Areas</h3>
              <div class="grid grid-cols-2 gap-2 text-sm">
                <div>• Highland Park</div>
                <div>• Edison</div>
                <div>• New Brunswick</div>
                <div>• Piscataway</div>
                <div>• North Brunswick</div>
                <div>• Franklin Township</div>
              </div>
              <p class="text-sm text-gray-600 mt-4">Mobile service available throughout Middlesex County</p>
            </div>

          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
        <div class="max-w-3xl mx-auto space-y-6">
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">How quickly can you provide a quote?</h3>
            <p class="text-gray-600">Same-day quotes available! Call us or submit the form above and we'll get back to you within 2 hours during business hours.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">Do you offer mobile service?</h3>
            <p class="text-gray-600">Yes! We provide mobile service throughout Highland Park and surrounding areas for many services including consultations and some installations.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">What payment methods do you accept?</h3>
            <p class="text-gray-600">We accept cash, checks, all major credit cards, and offer financing options for larger projects.</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-2">Do you provide warranties?</h3>
            <p class="text-gray-600">Absolutely! All our work comes with manufacturer warranties plus our own installation guarantee. Warranty terms vary by service.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Emergency Contact -->
    <section class="bg-red-600 text-white py-8">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-2xl font-bold mb-2">Need Same-Day Service?</h2>
        <p class="text-xl mb-4">Emergency appointments available</p>
        <a href="tel:+1XXXXXXXXXX" class="bg-white text-red-600 hover:bg-gray-100 px-8 py-3 rounded-lg font-semibold transition inline-block text-xl">
          Call Now: XXX-XXX-XXXX
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>