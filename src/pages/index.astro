---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="In 'n Out Auto Customization - Vehicle Wraps, PPF & Tinting Highland Park NJ">
	<Header />
	
	<main>
		<!-- Hero Section -->
		<section class="relative bg-gradient-to-r from-black to-gray-900 text-white py-20">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl">
					<h1 class="text-5xl font-bold mb-4">
						Professional Auto Customization in 
						<span class="text-red-500">Highland Park, NJ</span>
					</h1>
					<p class="text-xl mb-8">Vehicle Wraps • Paint Protection Film • Window Tinting • Custom Work</p>
					<div class="flex flex-wrap gap-4">
						<a href="/contact" class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-lg font-semibold transition inline-block">
							Get Free Quote
						</a>
						<a href="tel:+1XXXXXXXXXX" class="bg-transparent border-2 border-white hover:bg-white hover:text-black px-8 py-3 rounded-lg font-semibold transition inline-block">
							Call Now for Same-Day Service
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Trust Signals -->
		<section class="bg-red-600 text-white py-4">
			<div class="container mx-auto px-4">
				<div class="flex flex-wrap justify-center items-center gap-8 text-center">
					<div class="flex items-center gap-2">
						<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
						</svg>
						<span>5-Star Rated Service</span>
					</div>
					<div>Same-Day Service Available</div>
					<div>Licensed & Insured</div>
					<div>100% Satisfaction Guarantee</div>
				</div>
			</div>
		</section>

		<!-- Services Section -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-bold text-center mb-12">Our Professional Services</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<!-- Vehicle Wraps -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition">
						<div class="h-48 bg-gradient-to-br from-red-500 to-red-600"></div>
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-2">Vehicle Wraps</h3>
							<p class="text-gray-600 mb-4">Transform your vehicle with custom vinyl wraps. Color change, commercial, or custom designs.</p>
							<a href="/services/vehicle-wraps" class="text-red-600 hover:text-red-700 font-semibold">Learn More →</a>
						</div>
					</div>
					
					<!-- PPF Installation -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition">
						<div class="h-48 bg-gradient-to-br from-blue-500 to-blue-600"></div>
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-2">PPF Installation</h3>
							<p class="text-gray-600 mb-4">Protect your paint with premium Paint Protection Film. Clear bra installation for ultimate protection.</p>
							<a href="/services/ppf-installation" class="text-red-600 hover:text-red-700 font-semibold">Learn More →</a>
						</div>
					</div>
					
					<!-- Window Tinting -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition">
						<div class="h-48 bg-gradient-to-br from-gray-700 to-gray-900"></div>
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-2">Window Tinting</h3>
							<p class="text-gray-600 mb-4">Professional window tint installation. UV protection, heat rejection, and privacy.</p>
							<a href="/services/window-tinting" class="text-red-600 hover:text-red-700 font-semibold">Learn More →</a>
						</div>
					</div>
					
					<!-- Custom Work -->
					<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition">
						<div class="h-48 bg-gradient-to-br from-purple-500 to-purple-600"></div>
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-2">Custom Work</h3>
							<p class="text-gray-600 mb-4">Racing stripes, chrome delete, ceramic coating, and more custom modifications.</p>
							<a href="/services/custom-work" class="text-red-600 hover:text-red-700 font-semibold">Learn More →</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Why Choose Us -->
		<section class="py-16 bg-gray-100">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-bold text-center mb-12">Why Choose In 'n Out?</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center">
						<div class="w-20 h-20 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-2">Fast Turnaround</h3>
						<p class="text-gray-600">Same-day service available. Most jobs completed within 24-48 hours.</p>
					</div>
					
					<div class="text-center">
						<div class="w-20 h-20 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-2">Premium Quality</h3>
						<p class="text-gray-600">We use only top-tier materials from trusted brands like 3M, XPEL, and Avery Dennison.</p>
					</div>
					
					<div class="text-center">
						<div class="w-20 h-20 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
							</svg>
						</div>
						<h3 class="text-xl font-semibold mb-2">Expert Team</h3>
						<p class="text-gray-600">Certified installers with years of experience in auto customization.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Service Areas -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-4xl font-bold text-center mb-12">Serving All of Middlesex County</h2>
				<div class="max-w-3xl mx-auto">
					<p class="text-center text-lg mb-8">
						Located in Highland Park, NJ, we proudly serve customers throughout Central New Jersey with professional auto customization services.
					</p>
					<div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-center">
						<a href="/locations/highland-park" class="bg-white p-4 rounded shadow hover:shadow-lg transition">Highland Park</a>
						<a href="/locations/edison" class="bg-white p-4 rounded shadow hover:shadow-lg transition">Edison</a>
						<a href="/locations/new-brunswick" class="bg-white p-4 rounded shadow hover:shadow-lg transition">New Brunswick</a>
						<a href="/locations/piscataway" class="bg-white p-4 rounded shadow hover:shadow-lg transition">Piscataway</a>
						<a href="/locations/north-brunswick" class="bg-white p-4 rounded shadow hover:shadow-lg transition">North Brunswick</a>
						<a href="/locations/franklin-township" class="bg-white p-4 rounded shadow hover:shadow-lg transition">Franklin Township</a>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="bg-black text-white py-16">
			<div class="container mx-auto px-4 text-center">
				<h2 class="text-4xl font-bold mb-4">Ready to Transform Your Vehicle?</h2>
				<p class="text-xl mb-8">Get a free quote today for vehicle wraps, PPF, or window tinting in Highland Park, NJ</p>
				<div class="flex justify-center gap-4">
					<a href="/contact" class="bg-red-600 hover:bg-red-700 px-8 py-3 rounded-lg font-semibold transition inline-block">
						Get Your Free Quote
					</a>
					<a href="tel:+1XXXXXXXXXX" class="bg-white text-black hover:bg-gray-100 px-8 py-3 rounded-lg font-semibold transition inline-block">
						Call Now
					</a>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>
